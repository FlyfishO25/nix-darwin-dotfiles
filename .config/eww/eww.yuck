(defpoll date :interval "1s"
  `date +%H:%M:%S`)

(defwindow clock
           :monitor 0
           :geometry (geometry :x "0%"
                               :y "20px"
                               :width "90%"
                               :height "30px"
                               :anchor "top center")
           :stacking "fg"
  (literal :content date))
