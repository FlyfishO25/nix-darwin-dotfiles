#!/bin/sh

os=$(. /etc/os-release && echo $ID)

read -r _ _ version _ < /proc/version
kr=${version%%-*}

sh=${SHELL##*/}

wm="sway"

RED='\033[0;31m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

printf "
  ${YELLOW}os${NC}  -  ${YELLOW}${os}${NC}
  ${BLUE}kr${NC}  -  ${BLUE}${kr}${NC}
  ${RED}sh${NC}  -  ${RED}${sh}${NC}
  ${PURPLE}wm${NC}  -  ${PURPLE}${wm}${NC}

" | tr '[:upper:]' '[:lower:]'
