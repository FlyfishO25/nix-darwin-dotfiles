#!/bin/sh

e() {
  printf "\033[$@m"
}
b() {
  e "10$1;1"
}
f() {
  e "3$1;1"
}
r="$(e 0)"
u="$(e 4)"


cat <<EOF
┌─────────────────────────────────────────────────────────────────────────────┐
│ shaunsingh/vimrc-dotfiles                                                   │
└─────────────────────────────────────────────────────────────────────────────┘

┌────────────────┬────────────────┐      ┌───                              ───┐
│  highlighters  │      pens      │      │ shaun@mac                    nixos │
├────────────────┼────────────────┤
│ $(b 1)     red      $r │$(f 1)      red       $r│        hardware $u                         $r
├────────────────┼────────────────┤        * laptop .................. M1 MBP
│ $(b 2)    green     $r │$(f 2)     green      $r│        * ram ...................... 16 gb
├────────────────┼────────────────┤        * display .......... 2800x1440 13"
│ $(b 3)    yellow    $r │$(f 3)     yellow     $r│
├────────────────┼────────────────┤        software $u                         $r
│ $(b 4)     blue     $r │$(f 4)      blue      $r│        * window manager ........... yabai
├────────────────┼────────────────┤        * panel ................. spacebar
│ $(b 5)     pink     $r │$(f 5)      pink     $r │        * editor ...............emacs/nvim
├────────────────┼────────────────┤        * browser ............ qutebrowser
│ $(b 6)     cyan     $r │$(f 6)      cyan     $r │      │ * pdf ...................... emacs │
└────────────────┴────────────────┘      └───                              ───┘
EOF
